{{#each wods}}

<div class="container padding">
  <div class="row padding align-items-center">

    <div class=" col-xs-12 col-sm-12 col-md-2 col-lg-2 col-xl-2 ">

    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
      <h3><a href="/wod/{{_id}}">{{wodName}}</a></h3>
      <h4>{{duration}}</h4><br>
      <h5>{{desc}}</h5>
      <p>{{level}}</p><br>
      <div class="chalkBoard d-flex">
        <textarea name="body" rows="4" disabled> {{record}}</textarea>
        <form  action="/deleteWod/{{_id}}" method="POST">
        <button  class="btn btn-info" type="submit">Borrar WOD</button>
      </form>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 col-xl-1">
      {{!-- <form action="/deleteWod/{{_id}}" method="POST">
        <button class="btn btn-info" type="submit">Borrar WOD</button>
      </form> --}}
    </div>
  </div>
  {{#each comments}}
  <div class="row text-center padding align-items-center">
    <div class=" col-xs-12 col-sm-12 col-md-2 col-lg-2 col-xl-2 ">

    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
      <div class="row text-center padding align-items-center">
        <img class="col-md-1 col-lg-1 col-xl-1" src="{{userId.imagePath}}" alt="{{userId.imageName}}"
          style="width: 35px; height: auto">
        <strong><p>{{this.userId.name}}:</p></strong>   <p>{{this.body}}</p>
      </div>
      <hr class="my-4">
    </div>
  </div>
  {{/each}}
  <br>
</div>

{{/each}}

